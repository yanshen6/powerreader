<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_popup_seat_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_list_item_bg"
    android:padding="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@color/common_content_blue"
        android:text="2016-09-12"
        android:textSize="16sp" 
        android:layout_marginRight="5dp"/>
     <TextView
        android:id="@+id/tv_item_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:textColor="@color/common_content_light_blue"
        android:text="最新记录20.4"
        android:textSize="14sp" />

</LinearLayout>